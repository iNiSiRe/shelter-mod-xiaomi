{
    "name": "inisire/shelter-mod-xiaomi",
    "type": "module",
    "keywords": ["php", "smart-home", "shelter", "module", "xiaomi"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-sockets": "*",
        "evenement/evenement": "^3.0",
        "inisire/logging": "dev-master",
        "inisire/netbus-mqtt": "dev-master",
        "inisire/protocol-miio": "dev-master",
        "inisire/shelter-core": "dev-master",
        "symfony/event-dispatcher": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/inisire/netbus"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/fibers"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/protocol-byte-buffer"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/protocol-miio"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/fibers-mqtt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/logging"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/netbus-mqtt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/inisire/shelter-core"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "inisire/*": "source",
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "inisire\\Xiaomi\\": "src/"
        }
    }
}
